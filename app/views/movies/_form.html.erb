<%= form_for movie do |f| %>
  <% movie.errors.full_messages.each do |error| %>
    <div><strong>Error: </strong><%= error%></div>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :director_id %>
    <%= f.collection_select :director_id, Director.alphabetically, :id, :name, prompt: true %>
  </div>
  <div>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>

  <%= f.submit movie.persisted? ? "Update" : "Create" %>
<% end %>